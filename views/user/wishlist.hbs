<section class="similar products margintop">
    <div class="row">
        <h3>Wishlist</h3>
        {{#if products}}
        {{#each products}}
    <div class="col-md-3 col-sm-6">
        <div class="product-grid">
            <div class="product-image">
                <a href="#" class="image">
                    <img class="pic-1" src="/images/product-images/{{this.item}}_1.png">
                </a>
                <ul class="product-links">
                    <li><button value="{{this.item}}" type="button" class="btn btn-info delete" data-bs-toggle="modal" data-bs-target="#myModal"><i class="fa fa-shopping-bag"></i> Remove</button></li>
                    <li><a href="/product-view/{{this.item}}"><i class="fa fa-search"></i> Quick View</a></li>
                </ul>
            </div>
            <div class="product-content">
                <h3 class="title"><a href="#">{{this.product.Name}}</a></h3>
                <div class="price">â‚¹{{this.product.price}}</div>
            </div>
        </div>
    </div>
    {{/each}}
          
               
</div>
{{else}}
<div class="container-fluid mt-100">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                {{!-- <div class="card-header">
                    <h5>Cart</h5>
                </div> --}}
                <div class="card-body cart">
                    <div class="col-sm-12 empty-cart-cls text-center"> <img src="https://cdn2.iconfinder.com/data/icons/e-commerce-270/512/Wish_List_checklist_favorite_like_list_paper_wish_wishlist-512.png" width="130" height="130" class="img-fluid mb-4 mr-3">
                        <h3><strong>Wishlist is Empty</strong></h3>
                        <h4></h4> <a href="/" class="btn btn-primary cart-btn-transform m-3" data-abc="true">continue shopping</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{{/if}}

</section>

<section class="modalcustomconfirmation">

<!-- The Modal -->
<div class="modal fade" id="myModal">
  <div class="modal-dialog modal-dialog-centered modal-confirm">
    <div class="modal-content">

      <!-- Modal Header -->
      <div class="modal-header">
        <h4 class="modal-title w-100">Are you sure?</h4>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>

      <!-- Modal body -->
      <div class="modal-body">
        
        <p>Do you really want to delete these records? This process cannot be undone.</p>
        
      </div>

      <!-- Modal footer -->
      <div class="modal-footer">
		  
		  
       <a href="" class="btn btn-outline-danger confirm">Confirm</a>
        <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Close</button>
      </div>

    </div>
  </div>
</div>
</section>

<script>
	$(document).on("click", ".delete", function () {
     var value = $(this).val();
  console.log("value : ", $(this).val())

   $(".modal-dialog .confirm").attr("href","/remove-wishlist/"+value)
});
</script>


